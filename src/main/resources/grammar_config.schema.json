{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Config",
    "definitions": {
        "Config": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Settings": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Setting"
                    }
                },
                "Grammars": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {"$ref": "#/definitions/Grammar"},
                            {"$ref": "#/definitions/ExternCFG"}
                        ]
                    }
                },
                "Outputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Output"
                    }
                }
            },
            "required": [
                "Grammars",
                "Settings"
            ],
            "title": "GrammarConfig"
        },
        "ExternCFG" : {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "load-from": {
                    "type": "string"
                },
                "start-phrase": {
                    "type": "string"
                }
            },
            "required": ["name", "load-from"]
        },
        "Grammar": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "non-terminals": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "terminals": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "mask-worthy": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": " *(\\w+)( \\w+)* *(->)( *(\\w+)( \\w+)*)( *\\| *(\\w)+( \\w+)*)*"
                    }
                },
                "dictionary": {
                    "$ref": "#/definitions/Dictionary"
                },
                "start-phrase": {
                    "type": "string"
                }
            },
            "required": [
                "dictionary",
                "name",
                "non-terminals",
                "rules",
                "terminals",
                "start-phrase"
            ],
            "title": "Grammar"
        },
        "Dictionary": {
            "type": "object",
            "additionalProperties": true,
            "title": "Dictionary"
        },
        "Setting": {
            "type": "object",
            "additionalProperties": true,
            "title": "Settings",
            "properties": {
                "name": {
                    "type": "string"
                },
                "seed": {
                    "type": "integer"
                },
                "output-dir": {
                    "type": "string"
                },
                "task": {
                    "type": "string"
                },
                "word-generation": {
                    "type": "string"
                },
                "phrase-count-cap": {
                    "type": "integer"
                },
                "search-tree-depth-cap": {
                    "type": "integer"
                }
            },
            "required": [
                "name","output-dir", "task", "word-generation", "phrase-count-cap", "search-tree-depth-cap"
            ]
        },
        "Output": {
            "type": "object",
            "additionalProperties": false,
            "title": "Output",
            "properties": {
                "Grammar": {
                    "type": "string"
                },
                "Setting": {
                    "type": "string"
                },
                "file-name": {
                    "type": "string"
                },
                "overwrite-file" : {
                    "type" : "boolean"
                }
            },
            "required": [
                "Grammar","Setting", "file-name", "overwrite-file"
            ]
        }
    }
}
